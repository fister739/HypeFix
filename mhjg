3) script.js
// Grunddaten: Produkte (Beispiel). Die Liste kann auch von Benutzern erweitert werden.
let produkte = [
  { id: 1, name: "Aktiv Hoodie", price: 59.99, image: "https://images.unsplash.com/photo-1524641963749-9be3a1947e14?q=80&w=600&auto=format&fit=crop", description: "Weiches Fleece, bequemer Schnitt." },
  { id: 2, name: "Performance T-Shirt", price: 29.99, image: "https://images.unsplash.com/photo-1520975918650-8f8f9b3a3a54?q=80&w=600&auto=format&fit=crop", description: "Atmungsaktiv, feuchtigkeitsableitend." },
  { id: 3, name: "Run-Jacke Light", price: 89.99, image: "https://images.unsplash.com/photo-1528444258093-6e9a9e2c6a3f?q=80&w=600&auto=format&fit=crop", description: "Winddicht, ultraleicht." },
  { id: 4, name: "Kurze Trainingshose", price: 34.99, image: "https://images.unsplash.com/photo-1604007250836-4f2dff0b3a4b?q=80&w=600&auto=format&fit=crop", description: "Elastischer Bund, seitliche Taschen." }
];
let warenkorb = [];

// LocalStorage laden (falls vorhanden)
function ladeDaten(){
  const w = localStorage.getItem('warenkorb');
  if(w) {
    try { warenkorb = JSON.parse(w); } catch(e) { warenkorb = []; }
  }
  const p = localStorage.getItem('produkte');
  if(p) {
    try { produkte = JSON.parse(p); } catch(e) { /* ignore */ }
  }
}
function speichereDaten(){
  localStorage.setItem('warenkorb', JSON.stringify(warenkorb));
  localStorage.setItem('produkte', JSON.stringify(produkte));
}

function renderProdukte(){
  const grid = document.getElementById('produktGrid');
  grid.innerHTML = '';
  produkte.forEach(p => {
    const card = document.createElement('div');
    card.className = 'card';
    card.innerHTML = `
      <img src="${p.image}" alt="${p.name}">
      <h3>${p.name}</h3>
      <p>${p.description}</p>
      <div class="kaufe">
        <span>${p.price.toFixed(2)} ‚Ç¨</span>
        <button class="btn" onclick="hinzufuegen(${p.id})">In den Warenkorb</button>
      </div>
    `;
    grid.appendChild(card);
  });
}

function hinzufuegen(id){
  const produkt = produkte.find(p => p.id === id);
  if(!produkt) return;
  const exist = warenkorb.find(i => i.id === id);
  if(exist){
    exist.qty += 1;
  } else {
    warenkorb.push({id: produkt.id, name: produkt.name, price: produkt.price, qty: 1});
  }
  aktualisiereKorbAnzeige();
  speichereDaten();
  alert(`${produkt.name} zum Warenkorb hinzugef√ºgt`);
}

function aktualisiereKorbAnzeige(){
  const count = warenkorb.reduce((sum, it) => sum + it.qty, 0);
  document.getElementById('korbCount').textContent = count;
  renderCheckout(); // ggf aktualisieren
}

function entfernePosition(id){
  warenkorb = warenkorb.filter(i => i.id !== id);
  aktualisiereKorbAnzeige();
  renderProdukte();
  renderCheckout();
  speichereDaten();
}

function setzeMenge(id, delta){
  const item = warenkorb.find(i => i.id === id);
  if(!item) return;
  item.qty += delta;
  if(item.qty <= 0){
    entfernePosition(id);
  } else {
    aktualisiereKorbAnzeige();
  }
  renderCheckout();
  speichereDaten();
}

function berechneTotals(){
  const subtotal = warenkorb.reduce((sum, item) => sum + item.price * item.qty, 0);
  const versand = subtotal > 100 ? 0 : 6.99;
  const mwstRate = 0.19;
  const mwst = subtotal * mwstRate;
  const total = subtotal + versand + mwst;
  return { subtotal, versand, mwst, total };
}

function renderCheckout(){
  const container = document.getElementById('checkout');
  if(!container) return;
  const itemsEl = document.getElementById('checkoutItems');
  itemsEl.innerHTML = '';
  if(warenkorb.length === 0){
    itemsEl.innerHTML = '<p>Dein Warenkorb ist leer.</p>';
  } else {
    warenkorb.forEach(it => {
      const row = document.createElement('div');
      row.style.display = 'flex';
      row.style.justifyContent = 'space-between';
      row.style.alignItems = 'center';
      row.style.marginBottom = '8px';
      row.innerHTML = `
        <span>${it.name} √ó ${it.qty}</span>
        <span>${(it.price * it.qty).toFixed(2)} ‚Ç¨</span>
        <span>
          <button class="btn" onclick="setzeMenge(${it.id}, -1)" aria-label="eine Einheit entfernen">-</button>
          <button class="btn" onclick="setzeMenge(${it.id}, 1)" aria-label="eine Einheit hinzuf√ºgen" style="margin-left:6px;">+</button>
          <button class="btn secondary" onclick="entfernePosition(${it.id})" aria-label="Entfernen">Entfernen</button>
        </span>
      `;
      itemsEl.appendChild(row);
    });
  }
  const totals = berechneTotals();
  document.getElementById('checkoutTotals').innerHTML = `
    <strong>Zwischensumme:</strong> ${totals.subtotal.toFixed(2)} ‚Ç¨<br/>
    <strong>Versand:</strong> ${totals.versand.toFixed(2)} ‚Ç¨<br/>
    <strong>MwSt (19%):</strong> ${totals.mwst.toFixed(2)} ‚Ç¨<br/>
    <strong>Gesamt:</strong> ${totals.total.toFixed(2)} ‚Ç¨
  `;
}

function zuKasse(){
  // Zeige Checkout-Section
  document.getElementById('checkout').style.display = 'block';
  document.getElementById('produkte').style.display = 'none';
  renderCheckout();
  document.getElementById('checkout').scrollIntoView({behavior:'smooth'});
}

document.getElementById('anbietenForm')?.addEventListener('submit', function(e){
  e.preventDefault();
  const name = document.getElementById('neuesName').value.trim();
  const price = parseFloat(document.getElementById('neuesPreis').value);
  const description = document.getElementById('neuesBeschreibung').value.trim();
  const image = document.getElementById('neuesBild').value.trim();
  if(!name || isNaN(price) || !description || !image){
    alert('Bitte alle Felder ausf√ºllen.');
    return;
  }
  // Neues Produkt hinzuf√ºgen (ID generieren)
  const newId = (produkte.length ? Math.max(...produkte.map(p => p.id)) : 0) + 1;
  const neuesProdukt = { id: newId, name, price, image, description };
  produkte.push(neuesProdukt);
  // Persistieren
  speichereDaten();
  // UI aktualisieren
  renderProdukte();
  alert(`Produkt "${name}" wurde hinzugef√ºgt.`);
  // Felder leeren
  this.reset();
});

document.getElementById('checkoutForm')?.addEventListener('submit', function(e){
  e.preventDefault();
  const form = new FormData(e.target);
  const name = form.get('name')?.toString().trim();
  const email = form.get('email')?.toString().trim();
  const address = form.get('address')?.toString().trim();
  const city = form.get('city')?.toString().trim();
  if(!name || !email || !address || !city){
    alert('Bitte alle Felder ausf√ºllen.');
    return;
  }
  const totals = berechneTotals();
  alert(`Vielen Dank, ${name}! Deine Bestellung √ºber ${totals.total.toFixed(2)} ‚Ç¨ wird an ${address}, ${city} geliefert. Bestellbest√§tigung geht an ${email}.`);
  // Mock: Warenkorb leeren
  warenkorb = [];
  aktualisiereKorbAnzeige();
  renderCheckout();
  // Zur Startseite zur√ºckkehren
  document.getElementById('checkout').style.display = 'none';
  document.getElementById('produkte').style.display = 'block';
  document.getElementById('checkoutForm').reset();
  speichereDaten();
});

// Hilfsfunktion: gehe zu Abschnitt
function navigateTo(id){
  document.getElementById(id).scrollIntoView({behavior:'smooth'});
}

// Initialisieren beim Laden
ladeDaten();
renderProdukte();
aktualisiereKorbAnzeige();
// Verhindere, dass Checkout sichtbar ist beim ersten Laden
document.getElementById('checkout').style.display = 'none';

document.getElementById('korbBtn').addEventListener('click', function(){
  // Zeige Checkout, wenn Warenkorb nicht leer, sonst einfach nach oben scrollen
  if(warenkorb.length > 0){
    document.getElementById('checkout').style.display = 'block';
    document.getElementById('produkte').style.display = 'none';
    renderCheckout();
    document.getElementById('checkout').scrollIntoView({behavior:'smooth'});
  } else {
    navigateTo('produkte');
  }
});

// End des Skripts

